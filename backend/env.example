# =============================================================================
# TRAIDER V1 - Backend Environment Configuration
# =============================================================================

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

# PostgreSQL Database Connection
DATABASE_URL=postgresql://traider:password@localhost:5432/traider
DB_HOST=localhost
DB_PORT=5432
DB_NAME=traider
DB_USER=traider
DB_PASSWORD=password

# Connection Pool Settings
DB_POOL_SIZE=20
DB_MAX_OVERFLOW=10
DB_POOL_TIMEOUT=30

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================

# Environment (development, staging, production)
ENVIRONMENT=development

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=1

# CORS Settings
CORS_ORIGINS=http://localhost:3000,http://localhost:8000

# =============================================================================
# AUTHENTICATION & SECURITY
# =============================================================================

# JWT Configuration
JWT_SECRET_KEY=your-super-secret-jwt-key-change-in-production
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# Password Security
BCRYPT_ROUNDS=12

# =============================================================================
# REDIS CONFIGURATION
# =============================================================================

# Redis Connection
REDIS_URL=redis://localhost:6379/0
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# Cache Settings
CACHE_TTL=300
CACHE_PREFIX=traider:

# =============================================================================
# EXCHANGE API CONFIGURATION
# =============================================================================

# Binance API (for market data)
BINANCE_API_KEY=your-binance-api-key
BINANCE_SECRET_KEY=your-binance-secret-key
BINANCE_TESTNET=true

# Coinbase Advanced Trade API
COINBASE_API_KEY=your-coinbase-api-key
COINBASE_SECRET_KEY=your-coinbase-secret-key
COINBASE_PASSPHRASE=your-coinbase-passphrase
COINBASE_SANDBOX=true

# =============================================================================
# MONITORING & OBSERVABILITY
# =============================================================================

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=json
LOG_FILE=/app/logs/traider.log

# Prometheus Metrics
PROMETHEUS_PORT=8001
PROMETHEUS_PATH=/metrics

# Sentry Error Tracking
SENTRY_DSN=
SENTRY_ENVIRONMENT=development
SENTRY_RELEASE=1.0.0-alpha

# =============================================================================
# MESSAGE QUEUE CONFIGURATION
# =============================================================================

# Kafka/Redpanda Configuration
KAFKA_BOOTSTRAP_SERVERS=localhost:9092
KAFKA_TOPIC_PREFIX=traider
KAFKA_CONSUMER_GROUP=traider-backend

# =============================================================================
# MACHINE LEARNING CONFIGURATION
# =============================================================================

# MLflow Configuration
MLFLOW_TRACKING_URI=http://localhost:5000
MLFLOW_EXPERIMENT_NAME=traider-v1
MLFLOW_ARTIFACT_ROOT=./mlruns

# Model Configuration
MODEL_CACHE_DIR=./models
MODEL_UPDATE_INTERVAL=3600

# =============================================================================
# TRADING CONFIGURATION
# =============================================================================

# Risk Management
MAX_POSITION_SIZE=1000.0
MAX_DAILY_LOSS=500.0
MAX_LEVERAGE=3.0

# Trading Limits
ORDER_TIMEOUT=30
MAX_ORDERS_PER_SECOND=10
SLIPPAGE_TOLERANCE=0.001

# Paper Trading (set to false for live trading)
PAPER_TRADING=true

# =============================================================================
# DEVELOPMENT CONFIGURATION
# =============================================================================

# Debug Settings
DEBUG=true
RELOAD=true

# Testing
TEST_DATABASE_URL=postgresql://traider:password@localhost:5432/traider_test

# =============================================================================
# FEATURE FLAGS
# =============================================================================

# Trading Features
ENABLE_LIVE_TRADING=false
ENABLE_MARGIN_TRADING=false
ENABLE_OPTIONS_TRADING=false

# ML Features
ENABLE_SIGNAL_GENERATION=true
ENABLE_AUTO_REBALANCING=false

# Monitoring Features
ENABLE_METRICS=true
ENABLE_TRACING=false
ENABLE_PROFILING=false 